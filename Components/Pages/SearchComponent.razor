@inject IOMDbService _Omdb
@using Services;
@using Models;
@page "/Search"
@if (movies != null && movies.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var movie in movies)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@movie.Poster" class="card-img-top" alt="@movie.Title" onerror="this.src='https://via.placeholder.com/150'">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">Release Year: @movie.ReleaseYear</p>
                    </div>
                </div>
            </div>
        }
    </div>
}




@code {
    List<Movie> movies;

    protected override async Task OnInitializedAsync(){
        movies = await _Omdb.SearchMovies("blade runner");
    }
}







